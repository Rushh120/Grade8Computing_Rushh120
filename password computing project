# funny password sim
import time

def loading_animation(loadingMessage):
  time.sleep(1)
  print(loadingMessage)
  time.sleep(2)
  print('.')
  time.sleep(1)
  print('..')
  time.sleep(1)
  print('...')
  time.sleep(2)




usernames = ["Admin", "User0", "User1", "Jack", "John"]
passwords = ["admindesktop19@elyonschool", "", "", "donutsaresogood0990", "bigdinosaur123proguy"]

loading_animation("Loading...")

print("Welcome.")

time.sleep(2)

loginState = "enterUsername"

while True:
  if loginState == "enterUsername":

    userInput = input("Enter username: ")

    loading_animation("Finding...")

    if userInput in usernames:
      loginState = "enterPassword"
      username_index = usernames.index(userInput)
    else:
      print("Username not found.")
      time.sleep(2)


  elif loginState == "enterPassword":
    userInput = input("Enter password (Leave blank if there is no password): ")
    if userInput == passwords[username_index]:
      loading_animation("Logging in...")

      print("Login successful!")
      loginState = "mainScreen"
      time.sleep(2)
      print("Welcome, " + usernames[username_index] + ".")
    else:
      time.sleep(1)
      print("Incorrect password.")
      loginState = "enterUsername"
      time.sleep(2)


  elif loginState == "mainScreen":
    print("User settings (1)")
    print("Power options (2)")
    userInput = input()

    if userInput == "1":
      loginState = "userSettings"
    elif userInput == "2":
      loginState = "powerOptions"


  elif loginState == "userSettings":
    print("User settings")
    print("User info (1)")
    print("Change username (2)")
    print("Change password (3)")
    print("Back (4)")
    userInput = input()

    if userInput == "1":
      print("User: " + usernames[username_index] + ", Password: " + passwords[username_index])
    if userInput == "2":
      userInput = input("Enter new username: ")

      if input("Confirm new username: ") == userInput:
        usernames[username_index] = userInput
        print("Username changed to " + userInput + ".")
    if userInput == "3":
      userInput = input("Enter new password: ")

      if input("Confirm new password: ") == userInput:
        passwords[username_index] = userInput
        print("Password changed to " + userInput + ".")
    if userInput == "4":
      loginState = "mainScreen"


  elif loginState == "powerOptions":
    print("Power options")
    print("Shut down (1)")
    print("Restart (2)")
    print("Log out (3)")
    print("Back (4)")
    userInput = input()

    if userInput == "1":
      userInput = input("Are you sure you want to shut down? (y/n): ")
      if userInput == "y":
        loading_animation("Shutting down...")
        break

    if userInput == "2":
      userInput = input("Are you sure you want to restart? (y/n): ")
      if userInput == "y":
        loading_animation("Restarting...")
        time.sleep(5)
        loading_animation("Loading...")

        print("Welcome.")

        time.sleep(2)

        loginState = "enterUsername"

    if userInput == "3":
      loading_animation("Logging out...")
      loginState = "enterUsername"

    if userInput == "4":
      loginState = "mainScreen"
